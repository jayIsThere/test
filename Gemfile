source "https://rubygems.org"

# 사용하려는 Jekyll 버전 지정
gem "jekyll", "~> 3.10.0"
gem "github-pages", group: :jekyll_plugins

# Jekyll 플러그인
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end

# Windows 및 JRuby 환경에서 tzinfo 및 tzinfo-data 설치
gem "tzinfo", "~> 1.2"
gem "tzinfo-data", "~> 1.2" if RUBY_PLATFORM =~ %r!mingw|mswin|java!

# 윈도우 환경에서 디렉토리 감시 성능 향상
gem "wdm", "~> 0.1.1", :install_if => Gem.win_platform?

# 추가적인 gem들
gem "csv", "~> 3.3.4"
gem "i18n", "~> 1.14.7"
gem "webrick", "~> 1.9.1"
gem "nokogiri", "~> 1.18.7"
gem "concurrent-ruby", "~> 1.3.5"
gem "rexml", "~> 3.4.1"
gem "dnsruby", "~> 1.72.4"
gem "commonmarker", "~> 0.23.11"
gem "rubyzip", "~> 2.4.1"
gem "logger", "~> 1.6.6"
gem "faraday", "~> 2.13.0"
gem "execjs", "~> 2.10.0"
gem "activesupport", "~> 6.0.6.1"
gem "ffi", "~> 1.17.2"
gem "faraday-net_http", "~> 3.4.0"
gem "json", "~> 2.10.2"
gem "minitest", "~> 5.25.5"
gem "zeitwerk", "~> 2.6.0"
gem "net-http", "~> 0.6.0"
gem "thread_safe", "~> 0.3.6"
gem "uri", "~> 1.0.3"
